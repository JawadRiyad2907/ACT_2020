@using ACT.Models;
@model Item







@if (Model != null)
{
    <div class="portlet box blue-hoki">

        <div class="portlet-title">
            <div class="caption">
                <span>@Model.SectorId</span>
                <span>/@Model.DisplayOrder</span>
                @Model.ShortName
            </div>
