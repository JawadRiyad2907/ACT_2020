@using ACT.ViewModel;
@model QualificationViewModel
@{
    var ajaxOptions = new AjaxOptions
    {
        OnBegin = "onFormBegin",
        OnComplete = "onFormComplete",
        HttpMethod = "POST"
    };
}

@using (Ajax.BeginForm(null, null, ajaxOptions, new { enctype = "multipart/form-data" }))
{
    <div class="portlet">
        <div class="portlet-title">
            <div class="actions btn-set">
                <a href="@Url.Action("Index")" class="btn default"><i class="fa fa-reply"></i> رجوع </a>
                <button type="submit" class="btn  green"><i class="fa fa-check"></i> حفظ</button>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">

                <div class="form-group row">
                    @Html.LabelFor(model => model.ScientificDegreeId, new { @class = "control-label col-md-1" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(m => m.ScientificDegreeId, Model.AlvailableDegreeList, Resources.LocalizedText.DropDownnPleaseSelect, new { @class = "form-control input-sm select2me" })
                        @Html.ValidationMessageFor(model => model.ScientificDegreeId)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Specialization, new { @class = "control-label col-md-1" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Specialization, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.Specialization)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.University, new { @class = "control-label col-md-1" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.University, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.University)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Year, new { @class = "control-label col-md-1" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "touchspin_number form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.Year)
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section scripts
{
    <script>
        var returnUrl = "@Url.Action("Index")";
    </script>
}