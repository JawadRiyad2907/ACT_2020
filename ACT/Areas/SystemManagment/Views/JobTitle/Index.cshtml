@using ACT.ViewModel.JobTitle
@model JobTitleViewModel
@section Styles
{
    <link href="~/assets/global/plugins/jstree/dist/themes/default/style.min.css" rel="stylesheet" />
}
@Html.Partial("~/Views/Common/_UserCategorySearchPartialView.cshtml")
<div class="form-group row">
    <label class="control-label col-md-1" for="SearchName">@Html.DisplayNameFor(model => model.JobName)</label>
    <div class="col-md-3">
        <input class="form-control input-sm text-box single-line" id="SearchName" type="text" value="">
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <a id="search-btn" onclick="SearchDataTable();" class="btn  yellow filter-submit margin-bottom  pull-right"><i class="fa fa-search"></i> بحث</a>
    </div>
</div>

<div class="portlet">
    <div class="portlet-title">
        <div class="actions btn-set">
            <a href="@Url.Action("Add")" class="btn default yellow-stripe">
                <i class="fa fa-plus"></i>
                <span class="hidden-480">
                    اضافة جديد
                </span>
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="grid-object">
            <thead>
                <tr class="heading">
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserCategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DisplayOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts {

    <script src="~/assets/global/plugins/jstree/dist/jstree.min.js"></script>
    <script>
        var GridUrl = "@Url.Action("GetJobTitle")";
        var DeleteUrl = "@Url.Action("Delete")";
        var EditUrl = "@Url.Action("Edit")";
        var EditPrivelages = "@Url.Action("JobTitle", "Manage" ,new {Area="Privelags" })"
         var menuPrivelageUrl = "@Url.Action("JobTitleTreeReadOnly", "Manage" ,new {Area="Privelags" })";
        var fillLevel1Url = "@Url.Action("FillLevel1","Level1",new {Area="Level" })";
        var fillLevel2Url = "@Url.Action("FillLevel2","Level2",new {Area="Level" })";
        var fillLevel3Url = "@Url.Action("FillLevel3","Level3",new {Area="Level" })";
        var fillLevel4Url = "@Url.Action("FillLevel4","Level4",new {Area="Level" })";
        var fillUserCategoryUrl = "@Url.Action("FillUserCategory", "UserCategory", new {Area= "SystemManagment" })";

    </script>
    <script src="~/Scripts/Common/user-category-search.js"></script>
    <script src="@Url.Content("~/Scripts/JobTitle/table.js")"></script>
    <script src="@Url.Content("~/Scripts/JobTitle/main.js")"></script>
}